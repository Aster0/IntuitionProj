<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:behavior_hideable="false"
    app:behavior_peekHeight="70dp"
    android:orientation="vertical">
    <LinearLayout
        android:elevation="24dp"
        android:id="@+id/peek_area"
        android:layout_width="100dp"
        android:layout_height="52dp"
        android:background="@drawable/fancy_button_shape"
        android:layout_gravity="end"
        android:outlineProvider="bounds">
    <ImageButton
        android:id="@+id/expand_menu"
        android:background="?android:selectableItemBackground"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_menu_24"
        android:layout_gravity="center"
        android:layout_marginStart="10dp" />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:textSize="18sp"/>
    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        app:cardElevation="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="100dp">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/item_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Some placeholder title"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/item_payout_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/item_title"
                    app:layout_constraintTop_toBottomOf="@id/item_title"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="$5000"/>
                <ImageView
                    android:id="@+id/time_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_access_time_24"
                    app:layout_constraintStart_toStartOf="@id/item_payout_amount"
                    app:layout_constraintTop_toBottomOf="@id/item_payout_amount"
                    android:layout_marginTop="12dp"
                    tools:viewBindingIgnore="true"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/time_icon"
                    app:layout_constraintStart_toEndOf="@id/time_icon"
                    android:layout_marginStart="10dp"
                    android:text="Yesterday"/>

                <ImageView
                    android:id="@+id/description_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/time_icon"
                    app:layout_constraintTop_toBottomOf="@id/time_icon"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_baseline_description_24"
                    tools:viewBindingIgnore="true"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/item_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/description_icon"
                    app:layout_constraintStart_toEndOf="@id/description_icon"
                    android:layout_marginStart="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"
                    android:text=" Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum consequat arcu quis varius semper. Fusce nisl dui, consequat vel urna nec, egestas pulvinar sapien. Morbi vitae sem nisl. Nam vulputate ac purus laoreet varius. Etiam aliquam felis ut feugiat maximus. Aliquam eleifend id justo dapibus consequat. Sed facilisis placerat leo, eget tincidunt velit feugiat ut. Mauris scelerisque, elit vitae faucibus volutpat, sem diam interdum mi, et lobortis nunc tellus eu lectus. Cras congue massa a volutpat finibus. Donec sagittis semper justo, ut aliquam magna venenatis sit amet. Integer semper nisi nec volutpat efficitur. Aenean ultricies nibh in purus varius lobortis. Nunc in turpis ut dui vehicula viverra. In ac diam nunc. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean a ornare ante, sit amet consectetur metus." />
                <ImageView
                    android:id="@+id/region_meetup_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/item_desc"
                    app:layout_constraintStart_toStartOf="@id/description_icon"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_baseline_location_on_24"
                    tools:viewBindingIgnore="true"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/item_meetup_location"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/region_meetup_icon"
                    app:layout_constraintStart_toEndOf="@id/region_meetup_icon"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:text="Tampines"/>
                <ImageView
                    android:id="@+id/region_destination_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/region_meetup_icon"
                    app:layout_constraintStart_toStartOf="@id/description_icon"
                    android:layout_marginTop="12dp"
                    android:src="@drawable/ic_baseline_add_location_alt_24"
                    tools:viewBindingIgnore="true"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/item_destination_location"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/region_destination_icon"
                    app:layout_constraintStart_toEndOf="@id/region_destination_icon"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:text="Tampines (dest)"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chat_with_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/region_destination_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="52dp"
                    android:layout_marginEnd="52dp"
                    android:text="@string/chat_btn_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>